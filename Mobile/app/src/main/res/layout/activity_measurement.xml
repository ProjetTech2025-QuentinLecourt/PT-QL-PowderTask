<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="10dp">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/container_header_measurement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/return_from_measurement"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/return_arrow" />

        <TextView
            android:id="@+id/tv_measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/new_measurement"
            android:textColor="@color/bleu_gestion_visible"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Conteneur principal (centré) -->
    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Section Balance -->
        <LinearLayout
            android:id="@+id/container_balance_liste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_titreListBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balances :"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Section Poids -->
        <LinearLayout
            android:id="@+id/container_weight_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="100dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_weightValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="\?\?\?"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_weightUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kg"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_last_calibration_titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dernière calibration :"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_last_calibration_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="\?\?\?"
            android:textAlignment="center"
            android:textSize="14sp"
            android:visibility="visible" />

        <!-- Conteneur pour les boutons de la claibration-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:showDividers="middle"
            app:layout_constraintTop_toBottomOf="@id/tv_weightValue">

            <Button
                android:id="@+id/btn_auto_calibrate"
                style="@style/CalibrationButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Auto-Calibrage" />

            <Button
                android:id="@+id/btn_manual_calibrate"
                style="@style/CalibrationButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Calibrage Manuel" />
        </LinearLayout>
        <!-- Messages d'erreur (initialement cachés) -->
        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="La balance semble etre deconnecté"
            android:textAlignment="center"
            android:textColor="@color/color_status_offline"
            android:textSize="14sp"
            android:visibility="visible" />

        <!-- Bouton -->
        <Button
            android:id="@+id/btn_update_inventory"
            style="@style/CustomButton"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="Enregistrer"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>