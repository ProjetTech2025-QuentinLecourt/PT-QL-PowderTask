<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--   Inferieur Gauche     -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerX="-20%"
                android:centerY="120%"
                android:endColor="#FFFFFF"
                android:gradientRadius="300dp"
                android:startColor="@color/orange_bg"
                android:type="radial" />
        </shape>
    </item>
    <!--   Supérieur gauche     -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerX="-20%"
                android:centerY="-20%"
                android:endColor="#00FFFFFF"
                android:gradientRadius="300dp"
                android:startColor="@color/orange_bg"
                android:type="radial" />
        </shape>
    </item>
    <!--   Supérieur droit     -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerX="120%"
                android:centerY="-20%"
                android:endColor="#00FFFFFF"
                android:gradientRadius="300dp"
                android:startColor="@color/orange_bg"
                android:type="radial" />
        </shape>
    </item>
    <!--   Inferieur Droit     -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerX="120%"
                android:centerY="120%"
                android:endColor="#00FFFFFF"
                android:gradientRadius="300dp"
                android:startColor="@color/orange_bg"
                android:type="radial" />
        </shape>
    </item>
</layer-list>
